@import 'nib/vendor'
@import 'nib/gradients'

html{height:100%;color:#000;background:#FFF;}body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,button,textarea,p,blockquote,th,td{margin:0;padding:0;}table{border-collapse:collapse;border-spacing:0;}fieldset,img{border:0;}address,caption,cite,code,dfn,em,strong,th,var,optgroup{font-style:inherit;font-weight:inherit;}del,ins{text-decoration:none;}li{list-style:none;}caption,th{text-align:left;}h1,h2,h3,h4,h5,h6{font-size:100%;font-weight:normal;}q:before,q:after{content:'';}abbr,acronym{border:0;font-variant:normal;}sup{vertical-align:baseline;}sub{vertical-align:baseline;}legend{color:#000;}input,button,textarea,select,optgroup,option{font-family:inherit;font-size:inherit;font-style:inherit;font-weight:inherit;}input,button,textarea,select{*font-size:100%;} button.reset { background: none; border: none; margin: 0; padding: 0; width: auto; overflow: visible; line-height:inherit;}button::-moz-focus-inner{padding:0;border:0;}
*{-webkit-box-sizing: border-box;-moz-box-sizing: border-box;box-sizing: border-box;}

sans = Lato, arial, sans-serif
fsmall = 13px

a[href]
  color black
  text-decoration none
  border-bottom 1px solid black
  
::-moz-any-link:focus {outline: none;}
::selection {color:white;background: #81D3E8;}
::-moz-selection {color:white;background: #81D3E8;}

.col
  width 50%
  padding 40px 10% 0% 10%
  font-family sans
  img
    text-align center
    max-width 400px
  p
    font-size 18px
    line-height 24px
    text-indent 20px
    margin 0
    max-width 400px
  li
    font-size 18px
    line-height 23px
    max-width 400px
  h2
    margin 0 0 100px 0
    &:first-child
      margin-top 0
  h2, .back
    font-size fsmall
    margin-bottom 100px
    margin-left -50px
#left
  position fixed
  z-index 1
  overflow-y auto
  overflow-x none
  -webkit-overflow-scrolling touch
  float left
  a[href]
    color black
    &:active
      color #666
    img
      border 0
  .langpicker
    position absolute
    right 100px
    top 36px
    font-size 11px
    text-indent 0
    word-spacing 10px
  img
    margin 0 0 7px 0
  p img
    margin-left -20px
  ul
    margin 100px 0
  li:first-child
    margin 0 0 7px 0px
    text-indent 20px
#right
  float right
#nav
  padding 1px 0
  margin 100px 0 100px 0
  text-align center
  overflow hidden
  font-size 30px
  a
    border-bottom 0
    text-decoration none
#pagination
  position fixed
  right 5%
  bottom 105px
  font-size 16px
  font-family arial, lato
#prev
  float left
  width 50%
#next
  float right
  width 50%
#images
  li
    margin 0 auto 50px auto
    a
      display block
      border none
    img
      display block
      border 3px solid transparent
      &:hover
        border 3px solid #ccc
  p
    font-size fsmall
    text-indent 3px
#logo
  position fixed
  z-index 2
  background url(i/gifotomat.png) no-repeat
  top 50%
  margin-top -71px
  left 50%
  margin-left -85px
  width 150px
  a
    overflow hidden
    display block
    height 142px
    border none
    text-indent -9999px

// Single
.single
  .col
    width auto
    p
      text-indent 0
  .imgbox
    text-align center
    margin 0 auto
    display block
    img
      width 400px
  .urlbox
    display block
    font-size fsmall
    padding 3px 3px
    text-align center
    background #eee
    margin 35px auto 60px auto
    line-height 17px
    width 200px
    border 0
.p404
  height 100%
  .backimg
    position fixed
    right 8%
    bottom 10%
  .col
    width auto

/* iPads (portrait and landscape) ----------- */
@media screen and (max-width: 767px)
  #left, #right
    float none
    width auto
    padding 2% 0 0 3%
    h2
      margin-left 0
    p, li
      max-width 300px
      margin 0 auto
    img
      max-width 300px
      height auto
  #left
    position static
    margin-top 100px
    li:first-child
      margin 0 auto 7px auto
    .langpicker
      position static
      margin 0 0 20px 0
  #logo
    background url(i/gifotomat-small.png) no-repeat
    position absolute
    margin 0
    top 20px
    left auto
    right 20px
  body.paginated
    #left
      display none

@media screen and (min-width : 768px) and (max-width : 1024px)
  .col
    p
      font-size 15px
      line-height 18px
    img
      width 200px
      height auto
  #logo
    background url(i/gifotomat-small.png) no-repeat
    top 50%
    margin-top -52px
    left 50%
    margin-left -55px
    width 110px
    height 104px

